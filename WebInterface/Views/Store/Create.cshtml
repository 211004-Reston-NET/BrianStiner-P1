@*This displays text boxes to enter Name, Address, Phone, and Email for a new Customer.*@
@{
}
@model WebInterface.Models.StoreVM

<h1 class="text-center">Add New Store</h1>
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">

    <div class="form-floating mb-3">
        <input type="name" class="form-control" asp-for="Name" asp-required="true" placeholder="Samantha Tokatsu">
        <label asp-for="Name">Name</label>
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-floating mb-3">
        <input type="address" class="form-control" asp-for="Address" asp-required="true" placeholder="101 example ave. 11000">
        <label asp-for="Address">Address</label>
        <span asp-validation-for="Address"></span>
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-lg btn-primary" value="Create">Create Store</button>
    </div>
    
    </div>
    </div>

    
</form>