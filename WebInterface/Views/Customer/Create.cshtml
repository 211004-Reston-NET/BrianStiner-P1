@*This displays text boxes to enter Name, Address, Phone, and Email for a new Customer.*@
@{
}
@model WebInterface.Models.CustomerVM

<h1 class="text-center">Add New Customer</h1>
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div class="form-floating mb-3">
            <input type="name" class="form-control" asp-for="Name" asp-required="true" placeholder="Samantha Tokatsu">
            <label asp-for="Name">Name</label>
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="address" class="form-control" asp-for="Address" asp-required="true" placeholder="101 example ave. 11000">
            <label asp-for="Address">Address</label>
            <span asp-validation-for="Address"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="phone" class="form-control" asp-for="Phone" asp-required="true" placeholder="101-111-1101">
            <label asp-for="Phone">Phone number</label>
            <span asp-validation-for="Phone"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="email" class="form-control" asp-for="Email" asp-required="true" placeholder="name@email.com">
            <label asp-for="Email">Email address</label>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-lg btn-primary" value="Create">Submit</button>
        </div>
    </div>
</form>



<div class="form-group">
    <fieldset disabled="">
    <label class="form-label mt-4">Input addons</label>
    <div class="form-group">
        <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
            <span class="input-group-text">.00</span>
        </div>
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="button-addon2">
            <button class="btn btn-primary" type="button" id="button-addon2">Button</button>
        </div>
    </div>
    </fieldset>  
</div>

    
