@*This displays text boxes to enter Username, Address, Phone, and Email for a new Customer.*@
@{
}
@model WebInterface.Models.UserVM

<h1 class="text-center">Edit your Profile</h1>
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div class="form-floating mb-3">
            <input type="Username" class="form-control" asp-for="Username" asp-required="true" placeholder="Samantha Tokatsu">
            <label asp-for="Username">Username</label>
            <span asp-validation-for="Username"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="phone" class="form-control" asp-for="Phone" asp-required="true" placeholder="101-111-1101">
            <label asp-for="Phone">Phone number</label>
            <span asp-validation-for="Phone"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="email" class="form-control" asp-for="Email" asp-required="true" placeholder="Username@email.com">
            <label asp-for="Email">Email address</label>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-lg btn-primary" value="Edit">Submit</button>
        </div>
    </div>
</form>

