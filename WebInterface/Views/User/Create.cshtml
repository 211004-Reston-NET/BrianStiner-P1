@*This displays text boxes to enter Username, Password, Phone, and Email for a new Customer.*@
@{
}
@model WebInterface.Models.NewUserVM

<h1 class="text-center">Sign up new User</h1>
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div class="form-floating mb-3">
            <input type="Username" class="form-control" asp-for="Username" asp-required="true" placeholder="Will-do_T00">
            <label asp-for="Username">Username</label>
            <span asp-validation-for="Username"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="Password" class="form-control" asp-for="Password1" asp-required="true" placeholder="&&Ferte4ch3">
            <label asp-for="Password1">Password</label>
            <span asp-validation-for="Password1"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="Password" class="form-control" asp-for="Password2" asp-required="true" placeholder="&&Ferte4ch3">
            <label asp-for="Password2">Confirm Password</label>
            <span asp-validation-for="Password2"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="phone" class="form-control" asp-for="Phone" asp-required="true" placeholder="101-111-1101">
            <label asp-for="Phone">Phone number</label>
            <span asp-validation-for="Phone"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="email" class="form-control" asp-for="Email" asp-required="true" placeholder="Username@email.com">
            <label asp-for="Email">Email address</label>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-lg btn-primary" value="Create">Submit</button>
        </div>
    </div>
</form>
